<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="diagramShubenok.MainWindow"
        Title="diagramShubenok">
   <Grid
	   ColumnDefinitions="130, 300,*"
	   RowDefinitions="20,80,60,60,60,60,60,60,60,60,*">
	  
	   <StackPanel
		   Grid.Column="0"
		   Grid.ColumnSpan="2"
		   Grid.Row="0">
	   <TextBlock
		   TextWrapping="WrapWithOverflow"
		   Text="Введите значения для построения диаграммы: ">
		   </TextBlock>
		   </StackPanel>
		
			<StackPanel
				Grid.Row="1"
				Grid.Column="0">
				<TextBlock
					HorizontalAlignment="Center"
					Text="Число жертв: ">
				</TextBlock>
			</StackPanel>
	   <StackPanel
		   Grid.Row="2">
				<TextBlock
					HorizontalAlignment="Center"
					Text="Число хищников: ">
				</TextBlock>
				</StackPanel>
	   <StackPanel
		  Grid.Row="3">
		   <Image
			   HorizontalAlignment="Center"
			   VerticalAlignment="Center"
			   Height="15"
			   Width="15"
			   Name="sigm">
			   </Image>
	   </StackPanel>
	   <StackPanel
		  Grid.Row="4">
		   <Image
			   HorizontalAlignment="Center"
			   VerticalAlignment="Center"
			   Height="10"
			   Width="10"
			   Name="alph">
			   </Image>
	   </StackPanel>
	   <StackPanel
		  Grid.Row="5">
		   <Image
			   HorizontalAlignment="Center"
			   VerticalAlignment="Center"
				Height="25"
				Width="25"
			   Name="bet">
			   </Image>
	   </StackPanel>
	   <StackPanel
		  Grid.Row="6">
		   <Image
			   HorizontalAlignment="Center"
			   VerticalAlignment="Center"
				Height="20"
				Width="20"
			   Name="epsilon">
		   </Image>
	   </StackPanel>
	   <StackPanel
		  Grid.Row="7">
		   <TextBlock
			   HorizontalAlignment="Center"
			  Text="x0: ">
			  </TextBlock>
	   </StackPanel>
	   <StackPanel
		  Grid.Row="8">
		   <TextBlock
			   HorizontalAlignment="Center"
			   Text="y0: ">
		   </TextBlock>
	   </StackPanel>
	   <StackPanel
		  Grid.Row="9">
		   <TextBlock
			   HorizontalAlignment="Center"
			   Text="Число поколений: ">
		   </TextBlock>
		   <Button
			   Content="Готово"
			   Click="OkButton_Click">
			   </Button>
	   </StackPanel>
	   <StackPanel
		   HorizontalAlignment="Left"
		   Grid.Column="1"
		   Grid.Row="1">
		   <TextBox
			   Width="80"
			   Name="victimAmount">
			   </TextBox>
		   </StackPanel>
	   <StackPanel
		    HorizontalAlignment="Left"
		   Grid.Column="1"
		   Grid.Row="2">
		   <TextBox
			   Width="80"
			   Name="predAmount">
		   </TextBox>
	   </StackPanel>
	   <StackPanel
		    HorizontalAlignment="Left"
		   Grid.Column="1"
		   Grid.Row="3">
		   <TextBox
			   Width="80"
			   Name="sigmTb">
		   </TextBox>
	   </StackPanel>
	   <StackPanel
		   HorizontalAlignment="Left"
		  Grid.Column="1"
		  Grid.Row="4">
		   <TextBox
			   Width="80"
			   Name="alphaTb">
		   </TextBox>
	   </StackPanel>
	   <StackPanel
		   HorizontalAlignment="Left"
		  Grid.Column="1"
		  Grid.Row="5">
		   <TextBox
			   Width="80"
			   Name="betaTb">
		   </TextBox>
	   </StackPanel>
	   <StackPanel
		  HorizontalAlignment="Left"
		 Grid.Column="1"
		 Grid.Row="6">
		   <TextBox
			   Width="80"
			   Name="epsTb">
		   </TextBox>
	   </StackPanel>
	   <StackPanel
		  HorizontalAlignment="Left"
		 Grid.Column="1"
		 Grid.Row="7">
		   <TextBox
			   Width="80"
			   Name="xoTb">
		   </TextBox>
	   </StackPanel>
	   <StackPanel
		 HorizontalAlignment="Left"
		Grid.Column="1"
		Grid.Row="8">
		   <TextBox
			   Width="80"
			   Name="yoTb">
		   </TextBox>
	   </StackPanel>
	   <StackPanel
		HorizontalAlignment="Left"
	   Grid.Column="1"
	   Grid.Row="9">
		   <TextBlock
			   Text="450">
			   </TextBlock>
	   </StackPanel>
	   </Grid>
</Window>
